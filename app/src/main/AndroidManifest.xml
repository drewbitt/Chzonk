<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.teamb.chzonk">

    <uses-feature
            android:name="android.hardware.microphone"
            android:required="false" />
    <uses-feature
            android:name="android.hardware.touchscreen"
            android:required="false"/>
    <uses-feature
            android:name="android.software.leanback"
            android:required="true"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
            android:allowBackup="false"
            android:banner="@drawable/red_door_v2"
            android:icon="@mipmap/red_door_v2"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:replace="android:allowBackup"
            tools:ignore="GoogleAppIndexingWarning"
            android:name=".DaggerApp">

        <activity
                android:name=".ui.MainActivity"
                android:banner="@drawable/red_door_v2"
                android:icon="@drawable/red_door_v2"
                android:label="@string/title_activity_main"
                android:logo="@mipmap/red_door_v2"
                android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LEANBACK_LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.BrowseErrorActivity"/>
        <activity android:name=".ui.settings.SettingsActivity" />
    </application>

</manifest>